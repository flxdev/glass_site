extends _layout

block title
	title Contacts
	- var _name = "Contacts"
	- var currentPage = "Contacts"
block content
	.site__loader
	.root__wrapper
		.site__overlay
		.root__frame
			include includes/_header	
			#barba-wrapper
				.barba-container(data-namespace="Contacts")
					.wrapper-frame
						.block.page-head-block
							.row
								.columns
									.page-head
										.block-bg
											.block-bg-inner
												img.js-parallax(src="img/head/h5.jpg")
										.page-head-inner
											.page-head-gradient.js-parallax(data-speed="25")
											.page-head-content.js-parallax(data-direction="-1")
												.bread-cont
													a(href="/").bread-item Home
												.title.h2.white Contacts
						// модификатор .contact-cont
						.block.margin.anim-cont.contact-cont
							.row.align-stretch
								.columns.large-6
									.block-text
										.col
											.contact-text
												.text.primary Get in touch
												.block-contact
													.text.gray UAB «GLASSBEL BALTIC»
													.text 11, Pramones str., lt-94102 Klaipeda, Lithuania
													.text 
														a(href="tel:+37046416380") +370 (46) 416 380 
													.text
														a(href="mailto:solutions@glassbel.com") solutions@glassbel.com
												.block-contact
													.text.gray Francis Ellington UK Glassbel Representative
													.text Skype: 
														a(href="skype:francisellington?add") francisellington
													.text
														a(href="tel:+4407814781711") +44 (0)7814 781711 
													.text
														a(href="mailto:f.ellington@glassbel.com") f.ellington@glassbel.com
												+next('Send us a message')
								.columns.large-6
									.block-image
										.block-image-inner
											img(src="img/contacts/1.jpg", alt="")
						.block.margin.anim-cont
							.row
								.columns
									.map-container
										.map-container-inner#map(data-lat='55.696095',data-lon='21.202502',data-icon='/img/pin.png')

			include includes/_footer

					