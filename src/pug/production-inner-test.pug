extends _layout

block title
	title Production
	- var _name = "Production"
	- var currentPage = "Production"
block content
	.site__loader
	.root__wrapper
		.site__overlay
		.root__frame
			include includes/_header	
			#barba-wrapper
				.barba-container(data-namespace="Production-inner",data-next-link='/production-inner-test2.html',data-next-text='lorem Ipsum',data-prev-link='/production-inner.html',data-prev-text='tra-ta-ta',data-cur-text='Edge Treatment: Grinding, Polishing, Bevelling')
					.wrapper-frame
						.block.page-head-block
							.row
								.columns
									// модификатор head-big
									.page-head.head-big
										.block-bg
											.block-bg-inner
												img.js-parallax(src="img/head/h2.jpg")
										.page-head-inner
											.page-head-gradient.js-parallax(data-speed="25")
											.page-head-content
												.bread-cont
													a(href="/").bread-item Home
													a(href="#").bread-item Company
													a(href="/production.html").bread-item Production
												.title.h2.white Edge Treatment: Grinding, Polishing, Bevelling
						.block.margin
							.row
								.columns
									.prod-eleminner
										.row
											.columns.large-5
												.col(data-sticky-parent).js-stick-parent
													.prod-eleminner-content.content.js-stick
														.prod-eleminner-content-inner
															.text.primary 3300 mm x 7200 mm 129,9" x 283,5"
															.text.gray Features
															ul
																li Glasses Up To 19 mm
																li Cnc Decoating
																li Cutting Of Complex Shapes
																li Top Quality Decoating
																li Heat Treatment Of Magnetron, Pyrolytic, And Double Sided Coatings
														+nextb('Back to Production','/production.html')

											.columns.large-7
												.prod-eleminner-images
													img(src="img/index/index2.jpg", alt="")
													img(src="img/prodinner/prodinner.jpg", alt="")
													img(src="img/prodinner/prodinner2.jpg", alt="")

					include includes/_footer

					