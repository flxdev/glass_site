extends _layout

block title
	title Production
	- var _name = "Production"
	- var currentPage = "Production"
block content
	.site__loader
	.root__wrapper
		.site__overlay
		.root__frame
			include includes/_header	
			#barba-wrapper
				.barba-container(data-namespace="Production-inner")
					.prod-nav.block.js-prod-head
						.prod-nav-inner.brand
							.row
								.columns
									a(href="/production-inner.html").prod-nav-link
										.prod-nav-link-icon
											.icon
												+icon('slidearr')
										.prod-nav-link-text HEAT SOAK TEST
								.columns.large-5
									.text.primary.white Edge Treatment: Grinding, Polishing, Bevelling
								.columns
									a(href="/production-inner-test2.html").prod-nav-link
										.prod-nav-link-icon
											.icon
												+icon('slidearr')
										.prod-nav-link-text Roller painting and silk printing
					.wrapper-frame
						.block
							.row
								.columns
									// модификатор head-big
									.page-head.head-big
										.block-bg
											.block-bg-inner
												img.js-parallax(src="img/head/h2.jpg")
										.page-head-inner
											.page-head-gradient.js-parallax(data-speed="25")
											.page-head-content
												.bread-cont
													a(href="/").bread-item Home
													a(href="#").bread-item Company
													a(href="/production.html").bread-item Production
												.title.h2.white Edge Treatment: Grinding, Polishing, Bevelling
						.block.margin
							.row
								.columns
									.prod-eleminner
										.row
											.columns.large-5
												.col(data-sticky-parent).js-stick-parent
													.prod-eleminner-content.content.js-stick
														.prod-eleminner-content-inner
															.text.primary 3300 mm x 7200 mm 129,9" x 283,5"
															.text.gray Features
															p Glasses Up To 19 mm
															p Cnc Decoating
															p Cutting Of Complex Shapes
															p Top Quality Decoating
															p Heat Treatment Of Magnetron, Pyrolytic, And Double Sided Coatings
														+nextb('Back to Production','/production.html')

											.columns.large-7
												.prod-eleminner-images
													img(src="img/index/index2.jpg", alt="")
													img(src="img/prodinner/prodinner.jpg", alt="")
													img(src="img/prodinner/prodinner2.jpg", alt="")



